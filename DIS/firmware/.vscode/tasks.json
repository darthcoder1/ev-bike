{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "useWSL": true,
    
    "tasks": [
        {
            "type": "shell",
            "label": "build firmware",
            "group": "build",
            "command": "./build.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "problemMatcher": [
                "$rustc",
            ]
        },
        {
            "type": "shell",
            "label": "deploy firmware",
            "group": "build",
            "command": "./deploy.sh",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false
            },
            "problemMatcher": [
                "$rustc",
            ]
        }
    ]
}